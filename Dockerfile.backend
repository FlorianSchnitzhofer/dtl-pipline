FROM python:3.11-slim
WORKDIR /app
COPY src/backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
COPY src/backend ./
ENV SQL_DB_HOST=db
ENV SQL_DB_USER=dtl
ENV SQL_DB_NAME=dtl
ENV SQL_DB_PASSWORD=dtl
ENV PYTHONPATH=/app
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
